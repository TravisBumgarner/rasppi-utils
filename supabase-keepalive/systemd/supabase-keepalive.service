[Unit]
Description=Supabase Keep-Alive - Prevents free-tier project pausing
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
WorkingDirectory={{INSTALL_DIR}}/supabase-keepalive
ExecStart={{INSTALL_DIR}}/.venv/bin/python {{INSTALL_DIR}}/supabase-keepalive/scripts/keepalive.py
EnvironmentFile=/etc/rasppi-utils/supabase-keepalive/.env

[Install]
WantedBy=multi-user.target
